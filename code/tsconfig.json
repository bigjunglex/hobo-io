{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "esnext",
        "target": "es2022",
        "lib": [
            "esnext",
            "DOM",
        ],
        "types": [
            "node",
            "socket.io",
            "express",
        ],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "bundler",
    },
    "exclude": [ "node_modules", "./dist/"],
}